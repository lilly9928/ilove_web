<script>

$(document).ready(function () {
    var table ='inquire'
    var value='inquire_type="qna"'
    var data =[]
    a2s_getDBByCond(table, value, function (res) {
        if(res.length!=0){
            for(var i=0; i<res.length;i++){
                if(res[i].check==0){
                    var check="미응답"
                }else var check="응답"
            var input = [res[i].inquire_title, res[i].date,res[i].user_id,check]
            data.push(input)
            console.log(input)
            console.log(data)
            }
        }
        var table = $('#myTable').DataTable({
            data:data,
            "language": {
            "emptyTable": "데이터가 없습니다.",
            "lengthMenu": "페이지당 _MENU_ 개씩 보기",
